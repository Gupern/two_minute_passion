}

.firstlayout {
  /*弹性模型*/
  display: flex;
  /*垂直方向 列方向 排布*/
  flex-direction: column;
  /*居中*/
  align-items: center;
  /*要从整体解决排布的问题是最好的方案*/
  width: 100%;
  height: 400rpx;
  background: white;
}

.firstimagestyle {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
  border: 3px solid #FFFFFF;
}

.firstfontstyle {
  font-size: 34rpx;
  color: black;
}
.firstfontstyleTitle {
  font-size: 38rpx;
  color: midnightblue;
  font-weight: bold;
}

.firstfontstyleClick {
  font-size: 34rpx;
  color: blue;
}

